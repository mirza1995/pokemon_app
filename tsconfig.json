{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@components/*": ["./components/*"],
      "@services/*": ["./services/*"],
      "@store/*": ["./store/*"],
      "@reducers/*": ["./reducers/*"],
      "@models/*": ["./models/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],     
      "@mocks/*": ["./mocks/*"],
      "@images/*": ["./img/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
